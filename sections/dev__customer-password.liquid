    },
    {
      "type": "textarea",
      "id": "reset-password-input__classes",
      "default": "relative block w-full px-3 py-2 border",
      "label": "Reset Password Input Classes"
    },
    {
      "type": "textarea",
      "id": "reset-confirm-password__classes",
      "default": "my-2",
      "label": "Reset Confirm Password Classes"
    },
    {
      "type": "textarea",
      "id": "reset-confirm-password-label__classes",
