<div class="reset-password-container__classes {{ section.settings.reset-password-container__classes }}">
  <div class="reset-password-main__classes {{ section.settings.reset-password-main__classes }}">
    <div>
      <h1 class="reset-password-title__classes {{ section.settings.reset-password-title__classes }}">
        {{ section.settings['reset-password-title'] }}
      </h1>
    </div>
    <div class="reset-password-form__classes {{ section.settings.reset-password-form__classes }}">
      {% form 'reset_customer_password' %}
        {% if form.errors %}
          <div
            class="reset-password-error__classes {{ section.settings.reset-password-error__classes }}"
            role="alert"
          >
            <strong class="reset-password-error-title__classes {{ section.settings.reset-password-error-title__classes }}">
              {{- section.settings['reset-password-error-title'] -}}
            </strong>
            <p class="reset-password-error-message__classes {{ section.settings.reset-password-error-message__classes }}">
              {{ form.errors | default_errors }}
            </p>
          </div>
        {% endif %}

        <div class="reset-password__classes {{ section.settings.reset-password__classes }}">
          <label
            for="password"
            class="reset-password-label__classes {{ section.settings.reset-password-label__classes }}"
          >
            {{- section.settings['reset-password-label'] -}}
          </label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="reset-password-input__classes {{ section.settings.reset-password-input__classes }}"
            placeholder="{{ section.settings.reset-password-placeholder }}"
          >
        </div>

        <div class="reset-confirm-password__classes {{ section.settings.reset-confirm-password__classes }}">
          <label
            for="password_confirmation"
            class="reset-confirm-password-label__classes {{ section.settings.reset-confirm-password-label__classes }}"
          >
            {{- section.settings['reset-confirm-password-label'] -}}
          </label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="password_confirmation"
            autocomplete="new-password"
            class="reset-confirm-password-input__classes {{ section.settings.reset-confirm-password-input__classes }}"
            placeholder="{{ section.settings.reset-confirm-password-placeholder }}"
          >
        </div>
        <div>
          <button
            type="submit"
            class="reset-password-button__classes {{ section.settings.reset-password-button__classes }}"
          >
            {{ section.settings['reset-password-button'] }}
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Customer Reset Page",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "reset-password-title",
      "default": "Reset your Password",
      "label": "Reset Password Title"
    },
    {
      "type": "text",
      "id": "reset-password-error-title",
      "default": "Error!",
      "label": "Reset Password Error Title"
    },
    {
      "type": "text",
      "id": "reset-password-label",
      "default": "Password",
      "label": "Reset Password Label"
    },
    {
      "type": "text",
      "id": "reset-password-placeholder",
      "default": "Password",
      "label": "Reset Password Placeholder"
    },
    {
      "type": "text",
      "id": "reset-confirm-password-label",
      "default": "Confirm your Password",
      "label": "Reset Confirm Password Label"
    },
    {
      "type": "text",
      "id": "reset-confirm-password-placeholder",
      "default": "Confirm your Password",
