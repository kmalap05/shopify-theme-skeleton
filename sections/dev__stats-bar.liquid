      "info": "Note: Insert classes with space between them."
    },
    {
      "type": "textarea",
      "id": "stats-container__classes",
      "label": "Stats Container Classes",
      "default": "px-5 2xl:px-20"
    },
    {
      "type": "textarea",
      "id": "stats-title__classes",
      "label": "Stats Title Classes",
      "default": "text-4xl font-semibold text-gray-900 mt-4 mb-4 text-center"
    },
    {
      "type": "textarea",
      "id": "stats-inner-container__classes",
      "label": "Stats Inner Container Classes",
      "default": "grid py-5 gap-5"
    },
    {
      "type": "textarea",
      "id": "stats-wrapper__classes",
      "label": "Stats Wrapper Classes",
      "default": "text-center place-self-center"
    },
    {
      "type": "textarea",
      "id": "stats__classes",
      "label": "Stats Classes",
      "default": "max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 2xl:mt-5 2xl:mx-24  transition duration-300 ease-in-out transform hover:scale-105"
    },
    {
      "type": "textarea",
      "id": "stats-content__classes",
      "label": "Stats Content Classes",
      "default": "flex flex-col items-center justify-center px-4 py-3 md:p-5"
    },
    {
      "type": "textarea",
      "id": "stats-icon__classes",
