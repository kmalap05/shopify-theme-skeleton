<section id="{{ 'home-' | append: section.id }}">
  <div class="stats-container__classes {{ section.settings.stats-container__classes }}">
    <h2 class="stats-title__classes {{ section.settings.stats-title__classes }}">{{ section.settings.stats_heading }}</h2>
    <div class="stats-inner-container__classes {{ section.settings.stats-inner-container__classes }} {{ section.settings.per_row_sm }} {{ section.settings.per_row_md }} {{ section.settings.per_row_lg }}">
      {% for block in section.blocks %}
        <div class="stats-wrapper__classes {{ section.settings.stats-wrapper__classes }}">
          <div class="stats__classes {{ section.settings.stats__classes }} ">
            <div class="stats-content__classes {{ section.settings.stats-content__classes }}">
              <span class="stats-icon__classes {{ section.settings.stats-icon__classes }}">
                {% if block.settings.icon_select == 'icon-rocket' %}
                  {% render 'icon-rocket' %}
                {% elsif block.settings.icon_select == 'icon-calendar' %}
                  {% render 'icon-calendar' %}
                {% elsif block.settings.icon_select == 'icon-sales' %}
                  {% render 'icon-sales' %}
                {% elsif block.settings.icon_select == 'icon-users-group' %}
                  {% render 'icon-users-group' %}
                {% endif %}
              </span>
              <div class="stats-details__classes {{ section.settings.stats-details__classes }}">
                {{ block.settings.stats_details }}
              </div>
              <div class="stats-subdetails__classes {{ section.settings.stats-subdetails__classes }}">
                {{ block.settings.stats_subdetails }}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Stats Bar Section",
  "settings": [
    {
      "type": "text",
      "id": "stats_heading",
      "label": "Stats Bar Heading",
      "default": "Statistics Bar"
    },
    {
      "type": "select",
      "id": "per_row_sm",
      "label": "Stats Tiles per row (mobile)",
      "default": "grid-cols-2",
      "options": [
        {
          "label": "1",
          "value": "grid-cols-1"
        },
        {
          "label": "2",
          "value": "grid-cols-2"
        },
        {
          "label": "3",
          "value": "grid-cols-3"
        }
      ]
    },
    {
      "type": "select",
      "id": "per_row_md",
      "label": "Stats Tiles per row (tablet)",
      "default": "md:grid-cols-3",
      "options": [
        {
          "label": "1",
          "value": "md:grid-cols-1"
        },
        {
          "label": "2",
          "value": "md:grid-cols-2"
        },
        {
          "label": "3",
          "value": "md:grid-cols-3"
        },
        {
          "label": "4",
          "value": "md:grid-cols-4"
        },
        {
          "label": "5",
          "value": "md:grid-cols-5"
        }
      ]
    },
    {
      "type": "select",
      "id": "per_row_lg",
      "label": "Stats Tiles per row (desktop)",
      "default": "lg:grid-cols-4",
      "options": [
        {
          "label": "1",
          "value": "lg:grid-cols-1"
        },
        {
          "label": "2",
          "value": "lg:grid-cols-2"
        },
        {
          "label": "3",
          "value": "lg:grid-cols-3"
        },
        {
          "label": "4",
          "value": "lg:grid-cols-4"
        },
        {
          "label": "5",
          "value": "lg:grid-cols-5"
        },
        {
          "label": "6",
          "value": "lg:grid-cols-6"
        },
        {
          "label": "7",
          "value": "lg:grid-cols-7"
        },
        {
