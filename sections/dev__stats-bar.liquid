    {
      "type": "textarea",
      "id": "stats-details__classes",
      "label": "Stats Details Classes",
      "default": "mb-2 text-lg md:text-xl font-semibold tracking-tight text-gray-900 dark:text-white"
    },
    {
      "type": "textarea",
      "id": "stats-subdetails__classes",
      "label": "Stats Subdetails Classes",
      "default": "text-sm md:text-base mb-3 font-normal text-gray-700 dark:text-gray-400"
    }
  ],
  "blocks": [
    {
      "type": "card_block",
      "name": "Stats Tile",
      "settings": [
        {
          "type": "text",
          "label": "Stats Details",
          "id": "stats_details",
          "default": "10000+"
        },
        {
          "type": "text",
          "label": "Stats Sub Details",
          "id": "stats_subdetails",
          "default": "Statistics Information!!"
        },
        {
          "type": "select",
          "id": "icon_select",
          "label": "Select Icon",
          "default": "icon-rocket",
          "options": [
            {
              "label": "Rocket",
              "value": "icon-rocket"
            },
            {
              "label": "Calendar",
              "value": "icon-calendar"
            },
            {
              "label": "Sales",
              "value": "icon-sales"
            },
            {
              "label": "Users Group",
              "value": "icon-users-group"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Statistics Bars",
      "category": "Statistics Bar",
      "blocks": [
        {
          "type": "card_block"
        }
      ]
    }
  ]
}
