    },
    {
      "type": "textarea",
      "id": "orders-pagination__classes",
      "label": "Orders Pagination Classes",
      "default": "max-w-6xl mx-auto"
    },
    {
      "type": "textarea",
      "id": "account-no-orders__classes",
      "label": "Account No Orders Classes",
