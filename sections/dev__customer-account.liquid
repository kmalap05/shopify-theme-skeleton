    },
    {
      "type": "textarea",
      "id": "account-orders-title__classes",
      "label": "Account Orders Title Classes",
      "default": "text-xl font-bold text-gray-700 dark:text-white"
    },
    {
      "type": "textarea",
      "id": "account-orders__classes",
